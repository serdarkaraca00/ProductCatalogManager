@model Product


<div>
    <p>
        Do you want to delete the product named @Model.Name?
        <form action="" method="post">
            <input type="hidden" asp-for="@Model.ProductId">
            <button type="submit" class="btn btn-danger">Yes</button>
            <a href="/" class="btn btn-primary">No</a>
        </form>
    </p>
</div>